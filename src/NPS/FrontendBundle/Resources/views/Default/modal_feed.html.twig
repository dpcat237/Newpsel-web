        <button class="btn" data-dismiss="modal" aria-hidden="true">{{ 'feed.cancel' | trans }}</button>
        <button id='subscribeSubmit' class="btn btn-primary" >{{ 'feed.add' | trans }}</button>
    </div>
</div>

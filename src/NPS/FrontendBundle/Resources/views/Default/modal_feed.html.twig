<div id="modalAddFeed" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="modalAddFeedLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="modalAddFeedLabel">{{ 'feed.subscribe' | trans }}</h3>
    </div>
    <div class="modal-body">
        <form data-validate="parsley" action="" id="subscribe-form" class="form">
            <div class="input-prepend">
                <input id="subscribe_feed" type="text" name="feed" data-trigger="change" data-required="true" data-type="url" placeholder="{{ 'feed.add_url' | trans }}">
            </div>
        </form>
    </div>

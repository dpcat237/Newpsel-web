<ul id="mSubscriptionList" class="nav nav-list">
    {% for userFeed in userFeeds %}
        <li>
            <a href="{{ path("items_list", {'user_feed_id':userFeed.id}) }}">
                {% if menuAll %}
                    {% set val = 1 %}
                    {% for userFeedCount in userFeedsCount %}
                        {% if userFeedCount.id == userFeed.id %}
                            {% set val = 0 %}
                            <span class="badge">{{ userFeedCount.total }}</span>
                        {% endif %}
                    {% endfor %}
                    {% if val %}
                        <span class="badge">0</span>
                    {% endif %}
                {% else %}
                    <span class="badge">{{ userFeed.total }}</span>
                {% endif %}
                {% if (userFeed.title | length) > 17 %}
                    {{ userFeed.title | slice(0, 17) }}...
                {% else %}
                    {{ userFeed.title }}
                {% endif %}
            </a>
        </li>
    {% endfor %}
</ul>
{% extends 'NPSFrontendBundle::base.html.twig' %}

{% block body %}
{% block content %}
    <div class="login bgd-password">
        <div class="wrapper">
            <div class="block-dark">
                <h3>{{ '_Forget_pwd'|trans }}</h3>
                <hr class="hr-dark">
                {% if sent %}
                    <h5>{{ '_Sent_recover_pwd'|trans }}</h5>
                {% else %}
                    <form data-validate="parsley" id="recoverPassword" class="form-dark" method="post" action="{{ path('recover_password') }}">
                        <div class="input-prepend">
                            <div>
                                <span class="add-dark"><i class="icon-envelope"></i></span>
                                {{ form_widget(form.email, { 'attr' : {'data-required':'true', 'placeholder':'_Email' }} ) }}
                            </div>
                            <div>{{ form_errors(form.email) }}</div>
                        </div>
                        <span id="sign-form-valid">
                            {{ form_row(form._token) }}
                            <input type="submit" class="btn btn-inverse pull-right" value="{{ '_Submit'|trans }}">
                        </span>
                        <span class="password-back"><a href="{{ path('sign_in') }}" class="btn btn-small btn-primary">{{ '_Back'|trans }}</a></span>
                        <div class="clearfix"></div>
                        <p class="para-account">&nbsp</p>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
{% endblock body %}
{% if (labels | length) > 0 %}
    <ul id="mLabelsList" class="nav nav-list">
        {% for label in labels %}
            <li>
                <a href="{{ path("items_later_list", {'label_id':label.id}) }}">
                    {% if menuAll %}
                        {% set val = 1 %}
                        {% for labelCount in labelsCount %}
                            {% if labelCount.id == label.id %}
                                {% set val = 0 %}
                                <span class="badge">{{ labelCount.total }}</span>
                            {% endif %}
                        {% endfor %}
                        {% if val %}
                            <span class="badge">0</span>
                        {% endif %}
                    {% else %}
                        <span class="badge">{{ label.total }}</span>
                    {% endif %}
                    {% if (label.name | length) > 22 %}
                        {{ label.name | slice(0, 22) }}...
                    {% else %}
                        {{ label.name }}
                    {% endif %}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endif %}
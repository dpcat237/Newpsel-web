{% extends 'NPSFrontendBundle::layout.html.twig' %}

{% block content %}
    <div class="row-fluid">
        <div class="block span12 inbox">
            <div class="block-body">

                {#<div class="inbox-filter">
                    <div class="btn-group">
                        <a class="btn" href="#"><input type="checkbox"></a>
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><span class="icon-caret-down"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#"><i class="icon-exclamation-sign"></i> All</a></li>
                            <li><a href="#"><i class="icon-star"></i> Starred</a></li>
                            <li><a href="#"><i class="icon-star-empty"></i> Unstarred</a></li>
                        </ul>
                    </div>

                    <div class="btn demo-cancel-click" rel="tooltip" title="Refresh"><i class="icon-refresh"></i></div>

                    <div class="btn-group">
                        <button class="btn demo-cancel-click" rel="tooltip" title="Archive"><i class="icon-folder-close"></i></button>
                        <button class="btn demo-cancel-click" rel="tooltip" title="Label"><i class="icon-tag"></i></button>
                        <button class="btn demo-cancel-click" rel="tooltip" title="Delete"><i class="icon-trash"></i></button>
                    </div>
                </div>#}

                <table class="table">
                    <tbody>
                    {% if userItems | length > 0 %}
                        {% for userItem in userItems %}
                            {% set item = userItem.item %}
                            <tr>
                                <td class="list-item-btn">
                                    <i class="btn readAction{% if userItem.unread %} icon-check-empty{% else %} icon-check{% endif %}"
                                        data-url="{{ url('mark_read', {'user_feed_id': userFeedId, 'user_item_id': userItem.id}) }}"
                                        data-id="{{ userItem.id }}" title="{{ '_Read_unread'|trans }}" ></i>
                                    <i class="btn starAction{% if userItem.isStared %} icon-star{% else %} icon-star-empty{% endif %}"
                                        data-url="{{ url('mark_star', {'user_feed_id': userFeedId, 'user_item_id': userItem.id}) }}" title="{{ '_Favorite_unfavorite'|trans }}" ></i>
                                    <a class="btn icon-tag dropdown-toggle" data-toggle="dropdown" href="#" title="{{ '_Set_label'|trans }}"></a>
                                    <ul class="dropdown-menu">
                                        {% for label in labels %}
                                            <li><a class="addLabelAction" data-url="{{ url('item_add_label', {'user_item_id': userItem.id, 'label_id': label.id}) }}"
                                                   data-id="{{ label.id }}">{{ label.name }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </td>
                                <td class="inbox-message">
                                    <a id="itemText-id-{{ userItem.id }}" class="list-item{% if userItem.unread %} bold{% endif %}" href="{{ url('item_view', {'user_feed_id': userFeedId, 'user_item_id': userItem.id}) }}">{{ item.title|raw }}</a>
                                </td>
                                <td class="center dateColumn">{{ item.humanDateAdd }}</td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td class="listNotify">
                                {{ '_notification_no_articles'|trans }}
                            </td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'NPSFrontendBundle::Default/layout.html.twig' %}

{% block content %}
    <!--  start product-table ..................................................................................... -->
    <form id="mainform" action="">
        <table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
            <tr>
                <th class="table-header-repeat line-left minwidth-1"><a href="">{% trans %}Date{% endtrans %}</a></th>
                <th class="table-header-repeat line-left minwidth-1"><a href="">{% trans %}Title{% endtrans %}</a></th>
                <th class="table-header-options line-left"><a href="">{% trans %}Options{% endtrans %}</a></th>
            </tr>

            {% for item in items %}
                <tr>
                    <td>{{ item.humanDateAdd }}</td>
                    <td>
                        <a href="{{ url('item', {'id': item.id}) }}"><b>{{ item.title|raw }}</b></a>
                        {# {% if item.isRead %}
                            <a href="{{ url('item', {'id': item.id}) }}">{{ item.title|raw }}</a>
                        {% else %}
                            <a href="{{ url('item', {'id': item.id}) }}"><b>{{ item.title|raw }}</b></a>
                        {% endif %}#}
                    </td>
                    <td class="options-width">
                        {#{% if item.isRead %}
                            <a href="{{ url('item_read', {'feedId': item.feedId, 'itemId': item.id}) }}" title="Unread" class="icon-5 info-tooltip"></a>
                        {% else %}
                            <a href="{{ url('item_read', {'feedId': item.feedId, 'itemId': item.id}) }}" title="Read" class="icon-2 info-tooltip"></a>
                        {% endif %}
                        {% if item.isStarred %}
                            <a href="{{ url('item_starred', {'feedId': item.feedId, 'itemId': item.id}) }}" title="Unread" class="icon-3 icon-3_on info-tooltip"></a>
                        {% else %}
                            <a href="{{ url('item_starred', {'feedId': item.feedId, 'itemId': item.id}) }}" title="Read" class="icon-3 info-tooltip"></a>
                        {% endif %}#}
                    </td>
                </tr>
            {% endfor %}
        </table>
        <!-- end product-table................................... -->
    </form>
{% endblock %}